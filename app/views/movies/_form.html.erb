
<%= form_for @movie do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being posted
      <ul>
        <% @movie.errors.full_messages. each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :release_date %><br>
    <%= f.text_field :release_date %>
  </div>

  <div>
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>

  <div>
    <%= f.label :runtime_in_minutes %><br>
    <%= f.text_field :runtime_in_minutes %>
  </div>

  <div>
    <%= f.label :upload_image %><br>
    <%= f.file_field :upload_image %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>

<% end %>